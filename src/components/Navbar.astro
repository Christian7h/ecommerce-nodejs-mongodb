---
import ButtonAdmin from "./ButtonAdmin.astro";
import ButtonMobileAdmin from "./ButtonMobileAdmin.astro";
---

<style is:global>
  .mobile-menu {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: top right;
  }
</style>

<nav class="w-full bg-valorant-dark border-b border-valorant-border z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex-shrink-0 flex items-center gap-2">
        <img src="/favicon.svg" alt="Logo" class="h-8 w-8 object-cover" />
        <span class="text-valorant-light font-bold text-xl">STORE</span>
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center gap-6">
        <div class="flex space-x-4">
          <a
            href="/"
            class="text-valorant-light hover:text-valorant-accent px-3 py-2 rounded-md transition-colors duration-200"
          >
            Productos
          </a>
          <a
            href="/about"
            class="text-valorant-light hover:text-valorant-accent px-3 py-2 rounded-md transition-colors duration-200"
          >
            Nosotros
          </a>
        </div>

        <!-- Auth Buttons -->
        <ButtonAdmin server:defer />
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-valorant-light hover:text-valorant-accent focus:outline-none"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <ButtonMobileAdmin server:defer />
</nav>
