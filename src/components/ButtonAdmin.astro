---
const token = Astro.cookies.get("token");
const tokenValue = token && token.value ? token.value : null;
const isTokenValid = !!tokenValue;
console.log("Token recuperado desde las cookies:", tokenValue);
---
<div class="ml-4 flex items-center md:ml-6 gap-3">
    {
      isTokenValid ? (
        <>
          <a
            href="/node/admin/dashboard"
            class="bg-valorant-accent text-valorant-light px-4 py-2 rounded-md hover:bg-valorant-accent/90 transition-colors flex items-center gap-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
              <path
                fill-rule="evenodd"
                d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z"
                clip-rule="evenodd"
              />
            </svg>
            Dashboard
          </a>
          <a
            href="/logout"
            class="px-4 py-2 rounded-md bg-valorant-card text-valorant-light hover:bg-red-600 transition-colors flex items-center gap-2"
            data-astro-prefetch="tap"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z"
                clip-rule="evenodd"
              />
            </svg>
            Salir
          </a>
        </>
      ) : (
        <>
          <a
            href="/node/login"
            class="px-4 py-2 rounded-md bg-valorant-card text-valorant-light hover:bg-valorant-accent transition-colors flex items-center gap-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                clip-rule="evenodd"
              />
            </svg>
            Ingresar
          </a>
          <a
            href="/node/register"
            class="px-4 py-2 rounded-md bg-valorant-accent text-valorant-light hover:bg-valorant-accent/90 transition-colors flex items-center gap-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
            </svg>
            Registro
          </a>
        </>
      )
    }
  </div>