---
//src/components/CardApis.astro
import { Image } from "astro:assets";

const { href, imageSrc, imageAlt, title, description } = Astro.props;
---

<!-- Enlaces a otras pÃ¡ginas -->
<a
  href={href}
  class="bg-valorant-dark bg-va p-4 rounded-lg shadow-lg block hover:shadow-2xl transition-shadow duration-300"
>
  <Image
    src={imageSrc}
    alt={imageAlt}
    sizes="(max-width: 600px) 100vw, 50vw"
    class="w-full object-cover mb-4 rounded-lg"
  />
  <h2 class="text-2xl font-semibold text-valorant hover:underline">{title}</h2>
  <p>{description}</p>
</a>
